<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\FrameXML\UI.xsd">
	<Script file="DraenorZoneAbility.lua"/>
	<Frame name="DraenorZoneAbilityFrame" parent="UIParent" hidden="true">
		<Size x="160" y="66"/>
		<Anchors>
			<Anchor point="TOP"/>
		</Anchors>
		<Frames>
			<Frame parentKey="Expanded" hidden="true">
				<Size x="160" y="55"/>
				<Anchors>
					<Anchor point="TOP"/>
				</Anchors>
				<Layers>
					<Layer level="ARTWORK">
						<Texture parentKey="SpellBoxTex" atlas="ZoneAbility-Generic-SpellBox" useAtlasSize="true">
							<Anchors>
								<Anchor point="TOP"/>
							</Anchors>
						</Texture>
						<FontString parentKey="AbilityName" inherits="GameFontHighlight" justifyH="LEFT" text="Gorgrond Shredder" spacing="2">
							<Size x="80" y="0"/>
							<Anchors>
								<Anchor point="TOPLEFT" relativeKey="$parent.SpellBoxTex" x="58" y="-6"/>
							</Anchors>
						</FontString>
					</Layer>
				</Layers>
				<Frames>
					<Button parentKey="SpellButton">
						<Size x="48" y="49"/>
						<Anchors>
							<Anchor point="TOPLEFT" relativeKey="$parent.SpellBoxTex" relativePoint="TOPLEFT" x="10" y="4"/>
						</Anchors>
						<Layers>
							<Layer level="ARTWORK" textureSubLevel="2">
								<Texture parentKey="IconBorder" atlas="ZoneAbility-Generic-IconBorder" useAtlasSize="true">
									<Anchors>
										<Anchor point="CENTER"/>
									</Anchors>
								</Texture>
							</Layer>
							<Layer level="ARTWORK" textureSubLevel="1">
								<Texture parentKey="Icon">
									<Size x="46" y="46"/>
									<Anchors>
										<Anchor point="CENTER" relativeKey="$parent.IconBorder"/>
									</Anchors>
								</Texture>
							</Layer>
						</Layers>
						<Scripts>
							<OnLoad>
								self:RegisterForDrag("LeftButton");
							</OnLoad>
							<OnClick>
								CastSpellByID(self.spellID);
							</OnClick>
							<OnDragStart>
								PickupSpell(self.spellID);
							</OnDragStart>
							<OnEnter>
								GameTooltip:SetOwner(self);
								GameTooltip:SetSpellByID(self.spellID);
							</OnEnter>
							<OnLeave>
								GameTooltip:Hide();
							</OnLeave>
						</Scripts>
						<HighlightTexture name="$parentHighlight" file="Interface\Buttons\ButtonHilight-Square" alphaMode="ADD"/>
					</Button>
				</Frames>		
			</Frame>
			<Frame parentKey="Collapsed">
				<Size x="153" y="27"/>
				<Anchors>
					<Anchor point="TOP"/>
				</Anchors>
				<Layers>
					<Layer level="ARTWORK">
						<Texture parentKey="AbilityBar" atlas="ZoneAbility-Generic-AbilityBar" useAtlasSize="true">
							<Anchors>
								<Anchor point="TOP"/>
							</Anchors>
						</Texture>
						<FontString parentKey="AbilityName" inherits="GameFontNormalSmall" text="Garrison Zone Ability">
							<Size x="120" y="0"/>
							<Anchors>
								<Anchor point="CENTER" relativeKey="$parent.AbilityBar" x="0" y="6"/>
							</Anchors>
						</FontString>
					</Layer>
				</Layers>
			</Frame>
			<Frame parentKey="Timer">
				<Size x="144" y="11"/>
				<Anchors>
					<Anchor point="TOP" x="0" y="-14"/>
				</Anchors>
				<Layers>
					<Layer level="OVERLAY">
						<Texture parentKey="BG" atlas="ZoneAbility-Generic-TimerBar-BG" useAtlasSize="true">
							<Anchors>
								<Anchor point="CENTER"/>
							</Anchors>
						</Texture>
					</Layer>
				</Layers>
				<Frames>
					<StatusBar parentKey="Fill">
						<Size x="144" y="11"/>
						<Anchors>
							<Anchor point="CENTER"/>
						</Anchors>
						<Layers>
							<Layer level="OVERLAY">
								<Texture parentKey="Glow" atlas="ZoneAbility-Generic-TimerBar-Glow" useAtlasSize="true" hidden="true">
									<Anchors>
										<Anchor point="CENTER"/>
									</Anchors>
								</Texture>
							</Layer>
						</Layers>
						<BarTexture atlas="ZoneAbility-Generic-TimerBar-Fill" useAtlasSize="true"/>
					</StatusBar>
				</Frames>
			</Frame>
		</Frames>
		<Scripts>
			<OnLoad function="DraenorZoneAbilityFrame_OnLoad"/>
			<OnEvent function="DraenorZoneAbilityFrame_OnEvent"/>
		</Scripts>
	</Frame>
</Ui>

<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\FrameXML\UI.xsd">
	<Script file="Blizzard_OrderHallTalents.lua"/>

	<Button name="GarrisonTalentButtonTemplate" virtual="true" mixin="GarrisonTalentButtonMixin">
		<Size x="40" y="40"/>
		<Layers>
			<Layer level="ARTWORK">
				<Texture parentKey="Icon">
					<Size x="40" y="40"/>
				</Texture>
			</Layer>
			<Layer level="OVERLAY">
				<Texture parentKey="Border" atlas="orderhalltalents-spellborder-yellow" useAtlasSize="true">
					<Anchors>
						<Anchor point="TOPLEFT" x="-4" y="4"/>
					</Anchors>
				</Texture>
			</Layer>
		</Layers>
		<Frames>
			<Cooldown parentKey="Cooldown" inherits="CooldownFrameTemplate" reverse="false" hideCountdownNumbers="true">
				<Size x="40" y="40"/>
				<Anchors>
					<Anchor point="CENTER"/>
				</Anchors>
			</Cooldown>
		</Frames>
		<Scripts>
			<OnEnter method="OnEnter"/>
			<OnLeave method="OnLeave"/>
			<OnClick method="OnClick"/>
		</Scripts>
	</Button>

	<Texture name="GarrisonTalentChoiceTemplate" virtual="true" atlas="orderhalltalents-choice-background" useAtlasSize="true"/>
	<Texture name="GarrisonTalentArrowTemplate" virtual="true" atlas="orderhalltalents-arrow-on" useAtlasSize="true"/>


	<Frame name="OrderHallTalentFrame" inherits="PortraitFrameTemplate" toplevel="true" enableMouse="true" parent="UIParent" hidden="true" mixin="OrderHallTalentFrameMixin">
		<Size x="539" y="425"/>
		<Scripts>
			<OnLoad method="OnLoad"/>
			<OnShow method="OnShow"/>
			<OnHide method="OnHide"/>
			<OnEvent method="OnEvent"/>
		</Scripts>
		<KeyValues>
			<KeyValue key="garrisonType" value="LE_GARRISON_TYPE_7_0" type="global"/>
		</KeyValues>
		<Layers>
			<Layer level="BACKGROUND">
				<Texture parentKey="ClassBackground">
					<Size x="527" y="362"/>
					<Anchors>
						<Anchor point="TOPLEFT" relativeTo="OrderHallTalentFrameBg" x="4" y="-40"/>
					</Anchors>
				</Texture>
			</Layer>
			<Layer level="ARTWORK">
				<Texture parentKey="CurrencyIcon">
					<Size x="24" y="24"/>
					<Anchors>
						<Anchor point="TOPRIGHT" x="-20" y="-33"/>
					</Anchors>
				</Texture>
				<FontString parentKey="Currency" inherits="GameFontHighlight" justifyH="RIGHT">
					<Size x="100" y="20"/>
					<Anchors>
						<Anchor point="RIGHT" relativeKey="$parent.CurrencyIcon" relativePoint="LEFT" x="-4" y="0"/>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
	</Frame>
</Ui>

						<Anchor point="TOPLEFT" x="26" y="-135"/>
					</Anchors>
				</FontString>
				<FontString parentKey="TitleTextRight" inherits="GameFontNormalMed3" justifyH="LEFT" text="UPGRADE">
					<Size x="130" y="12"/>
					<Anchors>
						<Anchor point="TOPLEFT" x="215" y="-135"/>
					</Anchors>
				</FontString>
				<FontString parentKey="UpgradeStatus" inherits="GameFontNormal" justifyH="LEFT">
					<Size x="34" y="12"/>
					<Anchors>
						<Anchor point="TOPLEFT" x="360" y="-135"/>
					</Anchors>
					<Color r="1.0" g="1.0" b="1.0"/>
				</FontString>
			</Layer>
		</Layers>
		
		<Frames>
			<Frame parentKey="LeftItemLevel" hidden="true">
				<Size x="180" y="24"/>
				<Anchors>
					<Anchor point="TOPLEFT" relativeKey="$parent.HorzBar" x="4" y="-10" />
				</Anchors>
				<Layers>
					<Layer level="ARTWORK">
						<FontString parentKey="iLvlText" inherits="GameFontNormalLarge" justifyH="RIGHT">
							<Size x="40" y="22"/>
							<Anchors>
								<Anchor point="LEFT" x="0" y="0"/>
							</Anchors>
							<Color r="1" g="1" b="1" a="1"/>
						</FontString>
						<FontString parentKey="ItemLevelText" inherits="GameFontNormal" justifyH="LEFT">
							<Size x="100" y="22"/>
							<Anchors>
								<Anchor point="LEFT" x="50"/>
							</Anchors>
							<Color r="1" g="1" b="1" a="1"/>
						</FontString>
					</Layer>
				</Layers>
			</Frame>
			<Frame parentKey="RightItemLevel" hidden="true">
				<Size x="180" y="24"/>
				<Anchors>
					<Anchor point="TOPRIGHT" relativeKey="$parent.HorzBar" x="-10" y="-10" />
				</Anchors>
				<Layers>
					<Layer level="ARTWORK">
						<FontString parentKey="incText" inherits="GameFontNormalLarge" justifyH="RIGHT">
							<Size x="40" y="22"/>
							<Anchors>
								<Anchor point="LEFT" x="0" y="0"/>
							</Anchors>
							<Color r="1" g="1" b="1" a="1"/>
						</FontString>
						<FontString parentKey="iLvlText" inherits="GameFontNormalLarge" justifyH="RIGHT">
							<Size x="40" y="22"/>
							<Anchors>
								<Anchor point="LEFT" x="40" y="0"/>
							</Anchors>
							<Color r="1" g="1" b="1" a="1"/>
						</FontString>
						<FontString parentKey="ItemLevelText" inherits="GameFontNormal" justifyH="LEFT">
							<Size x="100" y="22"/>
							<Anchors>
								<Anchor point="LEFT" x="90"/>
							</Anchors>
							<Color r="1" g="1" b="1" a="1"/>
						</FontString>
					</Layer>
				</Layers>
			</Frame>
			<Frame parentArray="LeftStat" inherits="ItemUpgradeStatTemplateLeft">
				<Anchors>
					<Anchor point="TOPLEFT" relativeKey="$parent.HorzBar" x="-10" y="-40" />

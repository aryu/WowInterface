		</Layers>
	</Frame>
	
	<Frame name="ItemUpgradeStatTemplateLeft" inherits="ItemUpgradeStatTemplate" virtual="true">
		<Layers>
			<Layer level="ARTWORK">
				<FontString parentKey="ItemLevelText" inherits="GameFontNormal" justifyH="RIGHT">

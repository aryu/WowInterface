<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\..\FrameXML\UI.xsd">
	<Script file="Blizzard_ArtifactClassNameTemplates.lua"/>

	<Button name="ArtifactsRelicSlotTemplate" virtual="true">
		<Size x="72" y="72" />
		
		<Layers>
			<Layer level="BACKGROUND">
				<Texture parentKey="Icon">
					<Anchors>
						<Anchor point="CENTER" />
					</Anchors>
				</Texture>
			</Layer>
		</Layers>
		
		<NormalTexture parentKey="NormalTexture" />
		<HighlightTexture parentKey="HighlightTexture" alphaMode="ADD" />

		<Scripts>
			<OnEnter>
				self:GetParent():OnRelicSlotMouseEnter(self);
			</OnEnter>
			<OnLeave>
				self:GetParent():OnRelicSlotMouseLeave(self);
			</OnLeave>
			<OnClick>
				self:GetParent():OnRelicSlotClicked(self);
			</OnClick>
			<OnReceiveDrag>
				self:GetParent():OnRelicSlotClicked(self);
			</OnReceiveDrag>
		</Scripts>
		<Animations>
			<AnimationGroup parentKey="CanSlotAnim" looping="REPEAT">
				<Alpha childKey="HighlightTexture" smoothing="OUT" duration=".75" order="1" fromAlpha="0" toAlpha="1"/>
				<Scale childKey="HighlightTexture" duration=".75" order="1" fromScaleX="1" fromScaleY="1" toScaleX="1.1" toScaleY="1.1"/>
				
				<Alpha childKey="HighlightTexture" smoothing="IN" duration=".75" order="2" fromAlpha="1" toAlpha="0"/>
			</AnimationGroup>
		</Animations>
	</Button>

	<Frame name="ArtifactsClassNameTemplateBase" hidden="true" mixin="ArtifactClassNameTemplateMixin" virtual="true">
		<Size x="400" y="100" />
		<Layers>
			<Layer level="OVERLAY">
				<FontString parentKey="ArtifactName" inherits="CoreAbilityFont">
					<Anchors>
						<Anchor point="TOP" />
					</Anchors>
					<Color r=".94" g=".733" b=".215" />
					<Shadow>
						<Offset x="1" y="-1" />
						<Color r="0" g="0" b="0"/>
					</Shadow>
				</FontString>
				
				<FontString parentKey="PointsRemainingLabel" inherits="Fancy27Font" mixin="AnimatedNumericFontStringMixin">
					<Anchors>
						<Anchor point="BOTTOM"/>
					</Anchors>
					
					<Color r="1" g="1" b="1"/>
				</FontString>

				<FontString parentKey="ArtifactPower" inherits="Fancy24Font" text="ARTIFACT_POWER">
					<Anchors>
						<Anchor point="BOTTOM" relativeKey="$parent.PointsRemainingLabel" relativePoint="TOP" />
					</Anchors>
					
					<Color r=".94" g=".533" b=".215" />
				</FontString>
				
				<FontString parentKey="MaxRanksLabel" inherits="Fancy16Font">
					<Anchors>
						<Anchor point="TOP" relativeKey="$parent.PointsRemainingLabel" relativePoint="BOTTOM" />
					</Anchors>
					
					<Color r="1" g="1" b="1"/>
				</FontString>
			</Layer>
		</Layers>
		<Frames>
			<Button parentKey="RelicSlot1" parentArray="RelicSlots" inherits="ArtifactsRelicSlotTemplate" />
			<Button parentKey="RelicSlot2" parentArray="RelicSlots" inherits="ArtifactsRelicSlotTemplate" />
			<Button parentKey="RelicSlot3" parentArray="RelicSlots" inherits="ArtifactsRelicSlotTemplate" />
		</Frames>
		<Scripts>
			<OnShow method="OnShow" />
			<OnHide method="OnHide" />
			<OnEvent method="OnEvent" />
			<OnUpdate method="OnUpdate" />
		</Scripts>
	</Frame>
	

				<Alpha childKey="BaseSmoke3" startDelay="4" duration="1" order="1" fromAlpha="0" toAlpha="1"/>
				<Scale childKey="BaseSmoke3" startDelay="4" smoothing="OUT" duration="2" order="1" fromScaleX="1" fromScaleY="1" toScaleX="1.5" toScaleY="1"/>

				<Translation childKey="Ember2" startDelay="1" duration="2" order="1" offsetX="0" offsetY="-50"/>
				<Alpha childKey="Ember2" startDelay="2.5" duration="0.5" order="1" fromAlpha="1" toAlpha="0"/>
				<Alpha childKey="Ember3" startDelay="2.75" duration="0.25" order="1" fromAlpha="0" toAlpha="1"/>
				<Rotation childKey="Ember3" startDelay="2.75" duration="1.5" order="1" degrees="-180"/>

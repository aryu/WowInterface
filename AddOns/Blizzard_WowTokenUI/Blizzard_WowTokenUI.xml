<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\FrameXML\UI.xsd">
	<Script file="Blizzard_WowTokenUI.lua"/>
	<ScopedModifier forbidden="true" scriptsUseGivenEnv="true">
		<Frame name="WowTokenRedemptionFrame" inherits="PortraitFrameTemplateNoCloseButton" frameStrata="DIALOG" parent="UIParent" enableMouse="true" hidden="true">
			<Size x="325" y="450"/>
			<!-- Anchored to the screen as a whole in lua -->
			<Layers>
				<Layer level="ARTWORK">
					<FontString parentKey="AtticText" inherits="GameFontHighlightMedium" text="TOKEN_REDEEM_LABEL">
						<Anchors>
							<Anchor point="TOP" x="0" y="-36"/>
						</Anchors>
					</FontString>
				</Layer>
			</Layers>
			<Frames>
				<Button parentKey="CloseButton" inherits="UIPanelCloseButtonNoScripts">
					<Anchors>
						<Anchor point="TOPRIGHT" relativePoint="TOPRIGHT">
							<Offset x="4" y="5" />
						</Anchor>
					</Anchors>
					<Scripts>
						<OnClick function="WowTokenRedemptionFrameCloseButton_OnClick" />
					</Scripts>
				</Button>
				<Frame parentKey="Inset" useParentLevel="true" inherits="InsetFrameTemplate">
					<Size x="317" y="440" />
					<Anchors>
						<Anchor point="TOPLEFT" x="4" y="-61" />
						<Anchor point="BOTTOMLEFT" x="4" y="6" />
					</Anchors>
				</Frame>
				<Frame parentKey="Display" useParentLevel="true">
					<Anchors>
						<Anchor point="TOPLEFT" relativeKey="$parent.Inset" relativePoint="TOPLEFT" x="3" y="-3" />
						<Anchor point="BOTTOMRIGHT" relativeKey="$parent.Inset" relativePoint="BOTTOMRIGHT" x="-3" y="3" />
					</Anchors>
					<Layers>
						<Layer level="ARTWORK">
							<FontString parentKey="Title" inherits="GameFontNormalHuge" text="TOKEN_REDEEM_GAME_TIME_TITLE">
								<Anchors>
									<Anchor point="TOP" x="0" y="-16"/>
								</Anchors>
							</FontString>
							<Texture parentKey="Image" atlas="token-choice-wow" useAtlasSize="true">
								<Anchors>
									<Anchor point="TOP" relativeKey="$parent.Title" relativePoint="BOTTOM" x="0" y="-12"/>
								</Anchors>
							</Texture>
							<FontString parentKey="Description" inherits="GameFontHighlight" text="TOKEN_REDEEM_GAME_TIME_DESCRIPTION">
								<Size x="280" y="0"/>
								<Anchors>
									<Anchor point="TOP" y="-174"/>
								</Anchors>
							</FontString>
							<FontString parentKey="Format" inherits="GameFontNormal">
								<Size x="280" y="0"/>
								<Anchors>
									<Anchor point="TOP" x="0" y="-230"/>
								</Anchors>
							</FontString>
						</Layer>
					</Layers>
					<Frames>
						<Button parentKey="RedeemButton" inherits="UIPanelButtonTemplate" text="TOKEN_REDEEM_GAME_TIME_BUTTON_LABEL" id="1">
							<Size x="234" y="28"/>
							<Anchors>
								<Anchor point="BOTTOM" x="0" y="24"/>
							</Anchors>
							<Scripts>
								<OnClick function="WowTokenRedemptionRedeemButton_OnClick"/>
							</Scripts>
						</Button>
					</Frames>
				</Frame>
			</Frames>
			<Scripts>
				<OnLoad function="WowTokenRedemptionFrame_OnLoad"/>
				<OnEvent function="WowTokenRedemptionFrame_OnEvent"/>
			</Scripts>
		</Frame>
		<Frame name="WowTokenDialog" parent="UIParent" frameStrata="DIALOG" toplevel="true" enableMouse="true" hidden="true">
			<Size x="434" y="216" />
			<!-- Anchors are set by the dialogs in lua -->
			<Backdrop edgeFile="Interface\DialogFrame\UI-DialogBox-Border" tile="true">
				<TileSize>
					<AbsValue val="32" />
				</TileSize>
				<EdgeSize>
					<AbsValue val="32" />
				</EdgeSize>
			</Backdrop>
			<Layers>
				<Layer level="BACKGROUND">
					<Texture>
						<Anchors>
							<Anchor point="TOPLEFT" x="5" y="-5" />
							<Anchor point="BOTTOMRIGHT" x="-5" y="5" />
						</Anchors>
						<Color r="0" g="0" b="0" a="1" />
					</Texture>
				</Layer>
				<Layer level="BORDER">
					<Texture parentKey="CompletionIcon" file="Interface\Store\Store-Main">
						<Size x="66" y="67"/>
						<Anchors>
							<Anchor point="TOP" x="0" y="-16"/>
						</Anchors>
						<TexCoords left="0.9248046875" right="0.98828125" top="0.3720703125" bottom="0.4365234375"/>	
					</Texture>
					<Texture parentKey="CautionIcon" file="Interface\DialogFrame\UI-Dialog-Icon-AlertNew" hidden="true">
						<Size x="32" y="32"/>
						<Anchors>
							<Anchor point="LEFT" x="24" y="0"/>
						</Anchors>
					</Texture>
				</Layer>
				<Layer level="ARTWORK">
					<FontString parentKey="Title" inherits="GameFontNormalLarge">
						<Anchors>
							<Anchor point="TOP" relativeKey="$parent.CompletionIcon" relativePoint="BOTTOM" x="0" y="-12"/>
						</Anchors>
					</FontString>
					<FontString parentKey="Description" inherits="GameFontHighlight">
						<Size x="0" y="0"/>
						<Anchors>
							<Anchor point="TOP" relativeKey="$parent.Title" relativePoint="BOTTOM" x="0" y="-16"/>
						</Anchors>
					</FontString>
					<FontString parentKey="ConfirmationDesc" inherits="GameFontNormal" hidden="true">
						<Size x="0" y="0"/>
						<Anchors>
							<Anchor point="TOP" relativeKey="$parent.Description" relativePoint="BOTTOM" x="0" y="-16"/>
						</Anchors>
					</FontString>
					<FontString parentKey="CautionText" inherits="GameFontRed" hidden="true">
						<Anchors>
							<Anchor point="BOTTOM" x="0" y="23"/>
						</Anchors>
					</FontString>
				</Layer>
			</Layers>
			<Frames>
				<Button parentKey="Button1" inherits="UIPanelButtonTemplate" text="OK" id="1">
					<Size x="120" y="22"/>
					<Anchors>
						<Anchor point="BOTTOM" x="0" y="16"/>
					</Anchors>
					<Scripts>
						<OnClick function="WowTokenDialogButton_OnClick"/>
					</Scripts>
				</Button>
				<Button parentKey="Button2" inherits="UIPanelButtonTemplate" hidden="true" id="2">
					<Size x="120" y="22"/>
					<Anchors>
						<Anchor point="BOTTOMLEFT" relativePoint="BOTTOM" x="8" y="16"/>
					</Anchors>
					<Scripts>
						<OnClick function="WowTokenDialogButton_OnClick"/>
					</Scripts>
				</Button>
			</Frames>
			<Scripts>
				<OnShow>
					if (self.dialog and self.dialog.onShow) then
						self.dialog.onShow(self);
					end
				</OnShow>
				<OnHide>
					if (self.dialog and self.dialog.onHide) then
						self.dialog.onHide(self);
					end
				</OnHide>
				<OnLoad function="WowTokenDialog_OnLoad"/>
				<OnEvent function="WowTokenDialog_OnEvent"/>
			</Scripts>
		</Frame>
	</ScopedModifier>
</Ui>
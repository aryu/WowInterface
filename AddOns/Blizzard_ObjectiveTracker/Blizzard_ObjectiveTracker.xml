						</AnimationGroup>
					</Animations>
				</Texture>
			</Layer>		
		</Layers>
		<Scripts>
			<OnLoad>
				self.height = OBJECTIVE_TRACKER_HEADER_HEIGHT;
			</OnLoad>
		</Scripts>
	</Frame>

	<Frame name="ObjectiveTrackerLineTemplate" virtual="true">
		<Size x="150" y="16"/>

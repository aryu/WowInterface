					<OnEnter function="ObjectiveTrackerBlockHeader_OnEnter"/>
					<OnLeave function="ObjectiveTrackerBlockHeader_OnLeave"/>
				</Scripts>
			</Button>
		</Frames>	
	</Frame>

	<Frame name="ObjectiveTrackerHeaderTemplate" virtual="true" hidden="true">

					</Anchors>
					<Animations>
						<AnimationGroup parentKey="Anim">
							<Scale startDelay="0.17" scaleX="1.5" scaleY="1.5" duration="0.35" order="1"/>
							<Alpha change="1" duration="0.17" endDelay="0.13" order="1"/>
							<Alpha change="-1" duration="0.40" order="2"/>

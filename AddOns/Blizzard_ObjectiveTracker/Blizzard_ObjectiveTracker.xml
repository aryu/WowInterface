						<AnimationGroup parentKey="AlphaAnim">
							<Alpha change="1" duration="0.07" order="1"/>
							<Alpha startDelay="0.27" change="-1" duration="0.57" order="2"/>
						</AnimationGroup>
						<AnimationGroup parentKey="TransAnim">

<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\FrameXML\UI.xsd">
	<Script file="Blizzard_AdventureMap.lua"/>
	
	<Texture name="AdventureMapDetailTileTemplate" virtual="true">
		<Size x="256" y="256" />
	</Texture>

	<Texture name="AdventureMapDebugTriggerAreaTemplate" virtual="true" alphaMode="ADD" />
	
	<Frame name="AdventureMapFrame" toplevel="true" enableMouse="true" parent="UIParent" hidden="true" frameStrata="LOW" mixin="AdventureMapMixin">
		<Size x="1004" y="689"/>
		<Anchors>
			<Anchor point="CENTER"/>
		</Anchors>

		<Frames>
			<Frame parentKey="BorderFrame" inherits="PortraitFrameTemplate" frameStrata="MEDIUM" setAllPoints="true">
				<Layers>
					<Layer level="ARTWORK" textureSubLevel="5">
						<Texture parentKey="Underlay" hidden="true">
							<Color r="0" g="0" b="0" a=".5"/>
						</Texture>
					</Layer>

					<Layer level="BORDER" textureSubLevel="-1">
						<Texture parentKey="TopBorder" atlas="AdventureMap_TopBorder" useAtlasSize="true">
							<Anchors>
								<Anchor point="BOTTOM"/>
							</Anchors>
						</Texture>
					</Layer>
				</Layers>
				
				<Scripts>
					<OnLoad>
						self.onCloseCallback = function() HideParentPanel(self) end;
					</OnLoad>
					<OnMouseWheel function="nop" />
				</Scripts>
			</Frame>
			<ScrollFrame parentKey="ScrollContainer" enableMouse="true" mixin="AdventureMapScrollControllerMixin">
				<Anchors>
					<Anchor point="TOPLEFT" x="1" y="-20"/>
					<Anchor point="BOTTOMRIGHT" x="-1" y="1"/>
				</Anchors>
				<ScrollChild>
					<Frame parentKey="Child" >
						<Anchors>
							<Anchor point="TOPLEFT"/>
						</Anchors>
						<Layers>
							<Layer level="BACKGROUND" textureSubLevel="-8">
								<Texture parentKey="TiledBackground" atlas="AdventureMap_TileBg" horizTile="true" vertTile="true">
									<Anchors>
										<Anchor point="CENTER"/>
									</Anchors>
								</Texture>
							</Layer>
						</Layers>
					</Frame>
				</ScrollChild>
				<Scripts>
					<OnLoad method="OnLoad"/>
					<OnHide method="OnHide"/>
					<OnMouseUp method="OnMouseUp"/>
					<OnMouseDown method="OnMouseDown"/>
					<OnMouseWheel method="OnMouseWheel"/>
					<OnUpdate method="OnUpdate"/>
				</Scripts>
			</ScrollFrame>
		</Frames>

		<Scripts>
			<OnLoad method="OnLoad"/>
			<OnShow method="OnShow"/>
			<OnEvent method="OnEvent"/>
			<OnHide method="OnHide"/>
		</Scripts>
	</Frame>
</Ui>
<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\FrameXML\UI.xsd">
	<Script file="Blizzard_AdventureMapInset.lua"/>

	<Frame name="AdventureMapInsetTemplate" mixin="AdventureMapInsetMixin" useParentLevel="true" virtual="true">
		<Size x="1002" y="668"/>

		<Frames>
			<Frame parentKey="ExpandedFrame" useParentLevel="true" setAllPoints="true">
				<Layers>
					<Layer level="BORDER">
						<Texture parentKey="Border" atlas="AdventureMap-InsetMapBorder">
							<Anchors>
								<Anchor point="TOPLEFT" x="-22" y="22" />
								<Anchor point="BOTTOMRIGHT" x="22" y="-22" />
							</Anchors>
						</Texture>
					</Layer>
				</Layers>
				<Frames>
					<Button parentKey="CloseButton" inherits="UIPanelCloseButtonNoScripts">
						<Anchors>
							<Anchor point="TOPRIGHT" x="-2" y="-2"/>
						</Anchors>
						<Scripts>
							<OnClick>
								self:GetParent():GetParent():Collapse();
							</OnClick>
						</Scripts>
					</Button>
				</Frames>
			</Frame>
			
			<Frame parentKey="CollapsedFrame" enableMouse="true">
				<Anchors>
					<Anchor point="CENTER" />
				</Anchors>
				<Layers>
					<Layer level="BORDER">
						<Texture parentKey="Icon" />
					</Layer>
					<Layer level="HIGHLIGHT">
						<Texture parentKey="IconHighlight" alphaMode="ADD" alpha=".25" />
					</Layer>
					
					<Layer level="ARTWORK">
						<FontString parentKey="Text" inherits="SystemFont_Large">
							<Anchors>
								<Anchor point="TOP" relativePoint="BOTTOM" y="15" />
							</Anchors>
							<Color r="1.0" g="0.82" b="0"/>
						</FontString>
					</Layer>

					<Layer level="BORDER" textureSubLevel="1">
						<Texture parentKey="TextBackground" atlas="AdventureMapLabel-Small" useAtlasSize="true">
							<Anchors>
								<Anchor point="BOTTOMLEFT" relativeKey="$parent.Text" x="-30" y="-10" />
								<Anchor point="TOPRIGHT" relativeKey="$parent.Text" x="30" y="10" />
							</Anchors>
						</Texture>
					</Layer>
				</Layers>
				<Scripts>
					<OnMouseUp>
						self:GetParent():Expand();
					</OnMouseUp>
					<OnMouseWheel>
						if delta > 0 then
							self:GetParent():Expand();
						end
					</OnMouseWheel>
					<OnEnter>
						self:GetParent():OnMouseEnter();
					</OnEnter>
					<OnLeave>
						self:GetParent():OnMouseLeave();
					</OnLeave>
				</Scripts>
			</Frame>
		</Frames>
		<Animations>
			<AnimationGroup parentKey="CollapseExpandAnim" setToFinalAlpha="true">
				<Alpha parentKey="ExpandedFrameAnim" childKey="ExpandedFrame" duration=".3" order="1"/>
				<Alpha parentKey="CollapsedFrameAnim" childKey="CollapsedFrame" duration=".3" order="1"/>

				<Scripts>
					<OnFinished>
						self:GetParent():OnCollapseExpandAnimFinished();
					</OnFinished>
				</Scripts>
			</AnimationGroup>
		</Animations>
	</Frame>
</Ui>